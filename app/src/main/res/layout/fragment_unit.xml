<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">


    <TextView
        android:id="@+id/setUnitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:text="Select preferred unit"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rgGavity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="550dp"
        android:layout_marginEnd="200dp"
        android:layout_marginLeft="20dp"

        android:text="@string/gravity_unit"
        android:textSize="20sp" />

    <RadioGroup

        android:id="@+id/rgGravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="460dp"

        android:layout_marginStart="200dp">

        <RadioButton
            android:id="@+id/rbSpecificGravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/specific_gravity" />

        <RadioButton
            android:id="@+id/rbBrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/brix" />

        <RadioButton
            android:id="@+id/rbPlato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plato" />
    </RadioGroup>

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="400dp"
        android:layout_marginEnd="170dp"
        android:layout_marginLeft="12dp"

        android:text="@string/temperture_unit"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/temp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="267dp"
        android:layout_marginLeft="12dp"

        android:layout_marginStart="-3dp"
        android:text="Allow Notifications"
        android:textSize="20sp" />

    <RadioGroup

        android:id="@+id/rgtemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="330dp"

        android:layout_marginStart="200dp">

    <RadioButton
        android:id="@+id/rbCelcius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/celsius" />

    <RadioButton
        android:id="@+id/rbFahrenheit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fahrenheit" />
    </RadioGroup>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="266dp"
        android:layout_marginEnd="102dp" />


</RelativeLayout>